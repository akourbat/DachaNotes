@page "/books"
@inherits RxOwningInjectableComponentBase<BlazorCientApp.ViewModels.BookMainViewModel>


<h3>BookMainView</h3>
<input type="number" class="mb-3" @bind-value="ViewModel.Price" />

<div class="col-sm-4">
    @if (ViewModel.Derived.Any())
    {
        <ul class="list-group">
            @foreach (var book in ViewModel.Derived)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Title: @book.Title
                    <span class="badge badge-primary badge-pill">Price: $@book.Price</span>
                </li>
            }
        </ul>
    }
</div>


